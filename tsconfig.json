{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "sourceMap": true,
        "inlineSources": true,
        "outDir": "dist",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "src",
        "paths": {
            "@/*": [
                "*"
            ]
        },
        "esModuleInterop": true,
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "scripts",
        "src",
        "tests"
    ]
}
